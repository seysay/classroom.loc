{% extends 'base.html.twig' %}
{% block title %}ClassRoom index{% endblock %}
{% block body %}
    <div class="container">
        <h1>ClassRoom index</h1>
        <hr>
        <a href="{{ path('class_room_new') }}" class="btn btn-outline-info" role="button" data-bs-toggle="button">—Åreate_new</a>
        <hr>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Class</th>
                <th>Created</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for classRoom in class['hydra:member'] %}
                <tr>
                    <td>{{ classRoom.id }}</td>
                    <td>{{ classRoom.class }}</td>
                    <td>{{ classRoom.created ? classRoom.created|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ classRoom.active ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('class_room_show', {'id': classRoom.id}) }}" class="btn btn-outline-primary"
                           role="button" data-bs-toggle="button">show</a>
                        <a href="{{ path('class_room_edit', {'id': classRoom.id}) }}" class="btn btn-outline-secondary"
                           role="button" data-bs-toggle="button">edit</a>
                        <a href="{{ path('class_room_change_active', {'id': classRoom.id}) }}"
                           class="btn btn-outline-success" role="button" data-bs-toggle="button">change_active</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
